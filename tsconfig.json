{
  "compilerOptions": {
    "module": "esnext",       // or "es2020" or "node16"
    "target": "es2021",
    "lib": ["es2021"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true
  },
}
